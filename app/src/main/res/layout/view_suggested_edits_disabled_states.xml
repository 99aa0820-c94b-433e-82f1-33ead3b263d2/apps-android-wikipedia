<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_suggested_edits_disabled" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Suggested edits is paused until October 8, 2019. Sorry Sharvaniharan, some of your recent contributions have been reverted. "
        android:textColor="#de000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Learn how to improve your edit skills on Wikipedia with the links below. "
        android:textColor="#de000000"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?attr/chip_background_color" />

    <LinearLayout
        android:id="@+id/editingTipsLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="0sp"
            android:text="Editing tips and tricks"
            android:textColor="#3366cc"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:tint="?attr/colorAccent"
            app:srcCompat="@drawable/ic_open_in_new_black_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/chip_background_color" />

    <LinearLayout
        android:id="@+id/suggestedEditsHelpLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="0sp"
            android:text="Suggested edits help page"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:tint="?attr/colorAccent"
            app:srcCompat="@drawable/ic_open_in_new_black_24px" />
    </LinearLayout>

    <View
        android:id="@+id/helpLayoutBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/chip_background_color"/>

</LinearLayout>
