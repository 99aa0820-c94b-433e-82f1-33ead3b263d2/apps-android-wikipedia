<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.wikipedia.views.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            app:progressBackgroundColor="@color/green90"
            app:progressColor="?attr/action_mode_green_background" />

        <LinearLayout
            android:id="@+id/imageBackground"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/multi_select_background_color"
            android:gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_add_gray_white_24dp"
                android:tint="?attr/colorAccent" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/suggested_edits_task_action_text_translate"
            android:textAllCaps="true"
            android:textColor="?attr/material_theme_primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suggested_edits_task_action_text_translate"
            android:textColor="?attr/material_theme_de_emphasised_color" />

    </LinearLayout>
</LinearLayout>